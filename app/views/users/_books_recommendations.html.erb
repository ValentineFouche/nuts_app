<div class="wrapper">
  <% if @user.bookrecoms == [] %>
    <p><%= @user.nickname %> n'a pas encore de livres dans sa liste.</p>
  <% else %>
    <%@user.bookrecoms.each do |bookrecom| %>
    <div class="movies-cards" style="max-width: 540px;">
      <%= link_to bookrecom_path(bookrecom), class:"text-decoration-none" do%>
      <div class="movies-image-card">
        <%= image_tag bookrecom.book.image_url, class: "img-fluid img-index" %>
      </div>
      <div>
        <h5 class="card-title card-profil"><%=bookrecom.book.title %></h5>
      </div>
      <div class="card-profil my-4">
          <%= link_to "Ajouter Ã  ma liste", "#", class: 'buttons' %>
        </div>
      <%end%>
    </div>
    <% end %>
  <% end %>
</div>
