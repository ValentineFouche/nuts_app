<div class="wrapper">
  <% if @user.podcastrecoms == [] %>
    <p><%= @user.nickname %> n'a pas encore de podcasts dans sa liste.</p>
  <% else %>
    <%@user.podcastrecoms.each do |podcastrecom| %>
      <div class="movies-cards" style="max-width: 540px;">
        <div class="movies-image-card">
          <%= image_tag podcastrecom.podcast.image_url, class: "img-fluid img-index" %>
        </div>
        <div>
        <% if podcastrecom.feedback_rating != nil %>
          <% podcastrecom.feedback_rating.times do %>
            <i class="fa-solid fa-star"></i>
          <% end %>
        <% end %>
      </div>
        <div>
          <h5 class="card-title card-profil"> <%= podcastrecom.podcast.title %> </h5>
        </div>
        <div class="card-profil my-4">
          <%= link_to "Ajouter Ã  ma liste", "#", class: 'buttons' %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
