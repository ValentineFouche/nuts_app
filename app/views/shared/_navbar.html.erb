<div class="navbar-index navbar sticky-top d-flex justify-content-between align-items-center px-1">
  <!-- changes header on sites --->
  <%= image_tag 'nuts-notes-logo.png', class: "img-navbar me-auto" %>

  <!-- button home --->
  <!-- dropdown menus --->
  <% if user_signed_in? %>
    <div class="dropdown">
      <i class="fa-solid fa-user icon-navbar text-decoration-none button-navigation mx-1 py-3"></i>
      <div class="dropdown-content">
        <%= link_to 'Mon profil',friend_show_path(current_user), class:"text-decoration-none button-navigation mx-1" %>
        <%= link_to 'Log out', destroy_user_session_path, method: :delete, class:"text-decoration-none button-navigation mx-1" %>
      </div>
    </div>
  <% else %>
    <%= link_to new_user_session_path, class:"text-decoration-none button-navigation mx-1" do %>
      <i class="fa-solid fa-user icon-navbar py-2"></i>
    <% end %>
  <% end %>
  <div class="dropdown">
    <i class="fas fa-plus text-decoration-none icon-navbar button-navigation mx-1 py-3"></i>
    <div class="dropdown-content">
      <p>Ajouter une reco:</p>
      <%= link_to 'Film', new_recommendation_path, class:"text-decoration-none button-navigation mx-1" %>
      <%= link_to 'Livre', new_bookrecom_path, class:"text-decoration-none button-navigation mx-1" %>
      <%= link_to 'Podcast', new_podcastrecom_path, class:"text-decoration-none button-navigation mx-1" %>
      <%= link_to 'Restaurant', new_restaurantrecom_path, class:"text-decoration-none button-navigation mx-1" %>
    </div>
  </div>
</div>
