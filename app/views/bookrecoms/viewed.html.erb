<div class="container">
  <div class="wrapper">
    <%@bookrecoms.select do |bookrecom|%>
      <div class="movies-cards" style="max-width: 540px;">
        <%= link_to bookrecom_path(bookrecom), class:"text-decoration-none" do%>
          <div class="movies-image-card">
          <% if bookrecom.book.image_url.start_with?("http") %>
            <%= image_tag bookrecom.podcats.image_url, alt: "Poster", class: "img-fluid img-index" %>
          <% elsif bookrecom.book.image_url.start_with?("..//assets/images/") %>
            <%= image_tag bookrecom.book.image_url.gsub("..//assets/images/", ""), alt: "Poster", class: "img-fluid img-index" %>
          <% else %>
            <%= image_tag bookrecom.book.image_url.gsub("../assets/images/", ""), alt: "Poster", class: "img-fluid img-index" %>
          <% end %>
          </div>
          <div>
            <% if bookrecom.feedback_rating != nil %>
              <% bookrecom.feedback_rating.times do %>
                <i class="fa-solid fa-star"></i>
              <% end %>
            <% end %>
          </div>
          <div>
            <h5 class="movies-card-text movies-card-header"><%=bookrecom.book.title %></h5>
          </div>
          <div>
          <% if bookrecom.friend != nil %>
            <p class="movies-card-text"><i class="fa-solid fa-user"></i>  <%=bookrecom.friend%></p>
          <% end %>
          </div>
        <%end %>
      </div>
    <%end%>
  </div>
</div>
