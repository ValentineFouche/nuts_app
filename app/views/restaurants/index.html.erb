<div class="container">
  <div id="map" style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  <div class="wrapper">
    <%@restaurants.select do |restaurant|%>
      <div class="movies-cards" style="max-width: 200px;">
        <%= link_to restaurant_path(restaurant), class:"text-decoration-none" do%>
          <div>
          </div>
          <div>
            <h1><%=restaurant.title %></h1>
          </div>
          <div>
          <% if restaurant.friend != nil %>
            <p class="movies-card-text"><i class="fa-solid fa-user"></i>  <%=restaurant.friend%></p>
          <% end %>
          </div>
        <%end %>
      </div>
    <%end%>
  </div>
</div>
